    <view class='flex-3'>服务专业度</view>
    <view class='flex-1'  bindtap='setprofessional_point' id="1">
      <image src='../../images/icons/star{{professional_point>=1?"_active":""}}.png' class='star'></image>
    </view>
    <view class='flex-1'  bindtap='setprofessional_point' id="2">
      <image src='../../images/icons/star{{professional_point>=2?"_active":""}}.png' class='star'></image>
    </view>
