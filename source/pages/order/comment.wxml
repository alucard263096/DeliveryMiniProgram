      <image src='../../images/icons/star{{professional_point>=3?"_active":""}}.png' class='star'></image>
    </view>
    <view class='flex-1' bindtap='setprofessional_point' id="4">
      <image src='../../images/icons/star{{professional_point>=4?"_active":""}}.png' class='star'></image>
    </view>
    <view class='flex-1' bindtap='setprofessional_point' id="5">
