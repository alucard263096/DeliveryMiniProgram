    </view>
  </view>

  <view class='flex-row' style='margin:4vh;'>
    <view class='flex-3'>服务态度</view>
    <view class='flex-1'  bindtap='setatitude_point' id="1">
      <image src='../../images/icons/star{{atitude_point>=1?"_active":""}}.png' class='star'></image>
    </view>
    <view class='flex-1' bindtap='setatitude_point' id="2">
      <image src='../../images/icons/star{{atitude_point>=2?"_active":""}}.png' class='star'></image>
    </view>
    <view class='flex-1' bindtap='setatitude_point' id="3">
      <image src='../../images/icons/star{{atitude_point>=3?"_active":""}}.png' class='star'></image>
    </view>
    <view class='flex-1' bindtap='setatitude_point' id="4">
      <image src='../../images/icons/star{{atitude_point>=4?"_active":""}}.png' class='star'></image>
    </view>
    <view class='flex-1' bindtap='setatitude_point' id="5">
      <image src='../../images/icons/star{{atitude_point>=5?"_active":""}}.png' class='star'></image>
    </view>
  </view>

  <view class='flex-row' style='margin:4vh;'>
    <view class='flex-3'>服务效率</view>
    <view class='flex-1'  bindtap='seteffect_point' id="1">
      <image src='../../images/icons/star{{effect_point>=1?"_active":""}}.png' class='star'></image>
    </view>
    <view class='flex-1' bindtap='seteffect_point' id="2">
      <image src='../../images/icons/star{{effect_point>=2?"_active":""}}.png' class='star'></image>
    </view>
